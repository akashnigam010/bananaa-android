<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPref1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veg or Non Veg?"
            android:textColor="@color/bnaColor"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingLeft="40dp"
            android:orientation="vertical">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rgVegNonVeg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/rbVeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Only Veg"
                    android:textColor="@color/darkGrey"
                    android:textSize="20dp"/>
                <RadioButton android:id="@+id/rbNonVeg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Non Veg-ggggg"
                    android:textColor="@color/darkGrey"
                    android:textSize="20dp"/>
                <RadioButton android:id="@+id/rbAnything"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Duh! Anything"
                    android:textColor="@color/darkGrey"
                    android:textSize="20dp"/>
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>