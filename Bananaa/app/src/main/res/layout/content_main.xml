<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.bananaa.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="406dp"
        android:layout_height="286dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/bnaColor"
        tools:layout_editor_absoluteX="-11dp" />

    <TextView
        android:id="@+id/homeBnaText"
        android:layout_width="206dp"
        android:layout_height="61dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeImage"
        android:text="@string/name" />

    <TextView
        android:id="@+id/homeSearch"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/search_bar_home"
        android:drawableStart="@drawable/ic_search"
        android:ems="10"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/search_rest_cuisine_dish"
        android:textColor="@color/grey"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeBnaText" />

</android.support.constraint.ConstraintLayout>
