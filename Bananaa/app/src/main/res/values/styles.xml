<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_clear</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="android:actionMenuTextColor">@color/bnaColor</item>
        <item name="android:actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BnaColor.Light.DarkActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/bnaColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_up</item>
        <item name="android:windowExitAnimation">@anim/zoom_down</item>
    </style>

    <style name="DishRatingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dish_ratingbar</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">70dp</item>

    </style>

</resources>
